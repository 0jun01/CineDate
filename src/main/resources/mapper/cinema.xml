<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.tenco.movie.repository.interfaces.CinemaRepository">

	<select id="findAllRegions" resultType="com.tenco.movie.repository.model.Regions">
        SELECT * FROM regions_tb ORDER BY id
    </select>
    
     <select id="findByRegionId" parameterType="int" resultType="com.tenco.movie.repository.model.SubRegions">
        SELECT * FROM subregions_tb WHERE region_id = #{regionId}
    </select>

	<select id="findTheatersBySubregionId" parameterType="int" resultType="com.tenco.movie.repository.model.Theater">
        SELECT * FROM theaters_tb WHERE subregion_id = #{subregionId}
    </select>

</mapper>